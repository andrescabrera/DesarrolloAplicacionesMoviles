<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/editTextServer" android:text="EditText"></EditText>


	<EditText android:inputType="number" android:id="@+id/editTextIdBuscar"
		android:layout_height="wrap_content" android:hint="Id a buscar"
		android:layout_width="match_parent"></EditText>
	<Button android:text="Buscar" android:id="@+id/buttonBuscarPorId"
		android:layout_width="wrap_content"  android:layout_height="wrap_content"
		android:layout_gravity="right"></Button>

	<TableLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent">


		<TableRow>
			<TextView android:text="Nombre" android:paddingLeft="10px"
				android:textStyle="bold" />
			<TextView android:id="@+id/textViewNombre"
				android:paddingLeft="10px" android:gravity="center" />
		</TableRow>
		<TableRow>
			<TextView android:text="Id" android:paddingLeft="10px"
				android:textStyle="bold" />
			<TextView android:id="@+id/textViewId"
				android:paddingLeft="10px" android:gravity="center" />
		</TableRow>
	</TableLayout>
	
	
	<EditText android:id="@+id/editTextNombre"
		android:layout_height="wrap_content" android:hint="Nuevo nombre"
		android:layout_width="match_parent"></EditText>
	<Button android:text="Guardar" android:id="@+id/buttonGuardar"
		android:layout_width="wrap_content"  android:layout_height="wrap_content"
		android:layout_gravity="right"></Button>
	<Spinner android:layout_height="wrap_content" android:prompt="@string/hello" android:layout_width="match_parent" android:id="@+id/spinnerCategorias"></Spinner>


</LinearLayout>
